<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report id="report_facture" model="commerciale.commandeclient" string="Facture" name="commerciale.report_facture_view"
        file="commerciale.report_facture" report_type="qweb-pdf"/>
        <template id="report_facture_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 t-field="o.ref_facture"/>
                            <t t-if="o.status== 'p' "><span>Inscrit le</span><span t-field="o.status"/></t>
                            <t t-else="">
                                <span>Non inscrit</span>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>