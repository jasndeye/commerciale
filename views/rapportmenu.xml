<odoo>
    <report id="report_menu" model="commerciale.menu" string="Menu_du_jour" name="commerciale.report_menu_view" file="commerciale.report_menu" report_type="qweb-pdf" />
    <template id="report_menu_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <!--  <t t-call="web.external_layout">    -->
                <div class="page ">
                    <!-- <h2 t-field="doc.name"/>  -->
                    <div class="article o_report_layout_standard" >
                            <table style="margin-left: 15%; border:1px solid black; width:60%" class="table table-condensed table-bordered">
                                <tbody>
                                    <t t-foreach="docs" t-as="doc">
                                        <h2 style="text-align: left;">
                                            <span style="margin-left:1%" t-esc="doc['date_menu']"></span> 
                                        </h2>
                                        <h3 style="text-align: center;"> Menu Du Jour : 
                                              <!-- on recuper le nom du menu -->
                                            <span style="margin-left:1%" t-esc="doc['nom']"></span> 
                                        </h3>
                                        <tr style="background-color: #3498db; border:1px solid black;">
                                        <td style="text-align: center; color: black;">Nom</td>
                                        <td style="text-align: center; color: black;">Prix</td>
                                        <td style="text-align: center; color: black;">Photo</td>
                                        </tr>
                                          <!-- tableau dinamyque, on recuper les infos sur les produits du menu -->
                                        <t t-foreach="doc['produit_ids']" t-as="produit">
                                            <tr style="border:1px solid black;">
                                                <td style="text-align: center; border:1px solid black;">
                                                    <span t-esc="produit['nom']"></span>
                                                </td>
                                                <td style="text-align: center; border:1px solid black;">
                                                    <span t-esc="produit['prix']"></span>
                                                </td>
                                                <td style="text-align: center;border:1px solid black;">
                                                    <!-- <span t-field="produit.photo" t-options='{"widget": "image"}'/> -->
                                                    <img t-if="produit.photo" t-att-src="image_data_uri(produit.photo)" width="40%"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>                
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
